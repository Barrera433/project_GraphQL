{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "jsx": "react",
        "noImplicitAny": true,
        "removeComments": true,
        "sourceMap": true,
        "target": "ES2020",
        "module": "commonjs",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "rootDir": "./src"
    },
     "include": ["./src/**/*"], 
    "exclude": ["node_modules", "**/*.test.ts"]
}