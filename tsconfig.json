{

    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "lib": ["ES6", "dom"],
        "removeComments": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "rootDir": "./src"
    },
    "include": ["src"],
    "exclude": ["node_modules", "**/*.test.ts"]
}